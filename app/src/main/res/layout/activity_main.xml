<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="NYC Museums"
            android:layout_width="368dp"
            android:layout_height="34dp" android:id="@+id/NYCMuseumsTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp" android:textColor="@android:color/black"
            android:textStyle="bold"/>
    <Button
            android:text="@string/museum_of_modern_art"
            android:layout_width="364dp"
            android:layout_height="60dp" android:id="@+id/MoMATicketsButton"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/NYCMuseumsTitle"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/NaturalHistoryTicketsButton"/>
    <Button
            android:text="@string/museum_of_natural_history"
            android:layout_width="364dp"
            android:layout_height="60dp" android:id="@+id/NaturalHistoryTicketsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.659"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/MetTicketsButton"/>
    <Button
            android:text="@string/the_met"
            android:layout_width="364dp"
            android:layout_height="60dp" android:id="@+id/MetTicketsButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/BrooklynTicketsButton"/>
    <Button
            android:text="@string/brooklyn_museum"
            android:layout_width="364dp"
            android:layout_height="60dp" android:id="@+id/BrooklynTicketsButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="328dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>

</androidx.constraintlayout.widget.ConstraintLayout>