<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TicketActivity">

    <ImageView
            android:layout_width="284dp"
            android:layout_height="236dp" tools:srcCompat="@drawable/moma" android:id="@+id/museumImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
    />
    <TextView
            android:text="@string/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/MuseumName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="155dp" android:layout_marginStart="155dp" android:layout_marginEnd="155dp"
            android:layout_marginRight="155dp" app:layout_constraintEnd_toEndOf="parent" android:textSize="30sp"
            android:textColor="@android:color/black" android:textStyle="bold"/>
    <TextView
            android:text="@string/textview"
            android:layout_width="76dp"
            android:layout_height="21dp"
            android:id="@+id/adultPrice"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/museumImage" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/seniorPrice"/>
    <TextView
            android:text="@string/textview"
            android:layout_width="76dp"
            android:layout_height="21dp"
            android:id="@+id/seniorPrice"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/studentPrice"
            app:layout_constraintTop_toBottomOf="@+id/adultPrice"/>
    <TextView
            android:text="@string/textview"
            android:layout_width="76dp"
            android:layout_height="21dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/studentPrice"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp"
            app:layout_constraintTop_toBottomOf="@+id/seniorPrice" android:layout_marginBottom="300dp"/>
    <Spinner
            android:layout_width="171dp"
            android:layout_height="21dp"
            android:id="@+id/spinner"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/adultPrice" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/museumImage"/>
    <Spinner
            android:layout_width="171dp"
            android:layout_height="21dp"
            android:id="@+id/spinner2"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/seniorPrice"
            app:layout_constraintTop_toBottomOf="@+id/spinner" android:layout_marginTop="20dp"/>
    <Spinner
            android:layout_width="171dp"
            android:layout_height="21dp"
            android:id="@+id/spinner3"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/spinner2"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/studentPrice"/>
</androidx.constraintlayout.widget.ConstraintLayout>